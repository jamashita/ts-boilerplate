{
  "name": "ts-boilerplate",
  "version": "0.3.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:jamashita/ts-boilerplate.git"
  },
  "author": "jamashita <jamashita@arachnid.xyz>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "compile": "tsc",
    "dev": "ts-node src/index.ts",
    "watch": "ts-node-dev --respawn src/index.ts",
    "clean": "rimraf dist",
    "build": "yarn clean && yarn compile",
    "lint": "eslint --fix 'src/**/*.ts'",
    "format": "prettier --write src/**/*.ts",
    "update": "ncu -u && yarn install && yarn upgrade"
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">= 6.14"
  },
  "engineStrict": true,
  "dependencies": {},
  "devDependencies": {
    "@types/node": "13.13.5",
    "@typescript-eslint/eslint-plugin": "2.32.0",
    "@typescript-eslint/parser": "2.32.0",
    "@typescript-eslint/typescript-estree": "2.32.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "npm-check-updates": "5.0.0",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-node": "8.10.1",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.8.3"
  }
}
