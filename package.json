{
  "name": "@jamashita/ts-boilerplate",
  "version": "0.3.8",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:jamashita/ts-boilerplate.git"
  },
  "license": "MIT",
  "author": "jamashita <jamashita@arachnid.xyz>",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "rimraf dist",
    "compile": "tsc",
    "dev": "ts-node src/index.ts",
    "format": "eslint --fix 'src/**/*.ts'",
    "start": "node dist/index.js",
    "update": "ncu -u && yarn install && yarn upgrade",
    "watch": "ts-node-dev --respawn src/index.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@jamashita/eslint-config": "1.1.0",
    "@types/node": "14.6.4",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "@typescript-eslint/typescript-estree": "4.1.0",
    "eslint": "7.8.1",
    "husky": "4.3.0",
    "lint-staged": "10.3.0",
    "npm-check-updates": "8.1.1",
    "rimraf": "3.0.2",
    "sort-package-json": "1.44.0",
    "ts-node": "9.0.0",
    "ts-node-dev": "1.0.0-pre.62",
    "typescript": "4.0.2"
  },
  "engines": {
    "node": ">= 14.5.0",
    "npm": ">= 6.14.5"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "public"
  }
}
